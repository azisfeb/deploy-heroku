{% include "../../layout-backend.twig" %}
{% block content %}
    <div class="container-table">
        <h3 class="title">Users List</h3>
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>No</th>
                    <th>First Name</th>
                    <th>Username</th>
                    <th>Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% set no = 0 %}
                {% for usr in user %}
                {% set no = no + 1 %}
                    <tr>
                        <td>{{ no }}</td>
                        <td>{{ usr.name|title }}</td>
                        <td>{{ usr.username }}</td>
                        <td>{{ usr.address }}</td>
                        <td>edit / delete</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
<script>
    $('.navbar-nav .nav-item').removeClass('active');
    $('#user').parent().addClass('active');
</script>